---
import Button from '@/components/ui/Button.astro';

export interface Props {
  t: {
    finalCTA: {
      title: string;
      ctaButton: string;
    };
  };
}

const { t } = Astro.props;
---

<section class="final-cta-section" id="final-cta">
  <div class="final-cta">
    <!-- Unicorn Studio Background -->
    <div
      class="unicorn-embed unicorn-background"
      data-us-project-src="/finalcta.json"
      data-us-scale="1"
      data-us-dpi="1.5"
    ></div>

    <div class="wrapper">
      <div class="text-wrapper">
        <h2>{t.finalCTA.title}</h2>
      </div>
      <Button
        variant="primary"
        size="large"
        popoverTarget="registration-popover"
        popoverAction="show"
      >
        {t.finalCTA.ctaButton}
      </Button>
    </div>
  </div>
</section>

<style>
  .final-cta-section {
    padding-inline: var(--section-inline);
  }

  .final-cta {
    max-width: var(--max-width);
    background-color: var(--background-secondary);
    color: var(--text-inverse);
    margin: 0 auto;
    padding-inline: var(--space-2xl);
    border-radius: 16px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .text-wrapper {
    display: flex;
    flex-direction: column;
    row-gap: 8px;
  }

  .wrapper {
    max-width: 600px;
    background-color: black;
    padding: var(--space-xl) var(--space-l);
    display: flex;
    flex-direction: column;
    gap: 40px;
    margin: 0 auto;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  /* Unicorn Studio Background Styles */
  .unicorn-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
    border-radius: 24px;
  }

  .unicorn-background canvas {
    width: 100% !important;
    height: 100% !important;
    display: block !important;
  }

  h2 {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
    color: white;
    text-align: center;
  }

  @media (max-width: 810px) {
    .final-cta {
      padding: var(--space-3xl) 0;
    }

    .wrapper {
      padding: var(--space-2xl) var(--card-inline);
      gap: 30px;
    }


  }


</style>

<!-- Unicorn Studio Script (only load if not already loaded) -->
<script is:inline>
  // Check if UnicornStudio is already loaded, if not load it
  if (!window.UnicornStudio) {
    const script = document.createElement('script');
    script.src = 'https://cdn.jsdelivr.net/gh/hiunicornstudio/unicornstudio.js@v1.4.33/dist/unicornStudio.umd.js';
    document.head.appendChild(script);
  }
</script>

<!-- Initialize Unicorn Studio for FinalCTA -->
<script is:inline>
  function initFinalCTAUnicorn() {
    if (window.UnicornStudio) {
      UnicornStudio.init()
        .then((scenes) => {
          console.log('FinalCTA Unicorn Studio initialized successfully:', scenes);
        })
        .catch((err) => {
          console.error('FinalCTA Unicorn Studio initialization error:', err);
        });
    } else {
      // Retry after a short delay if UnicornStudio isn't loaded yet
      setTimeout(initFinalCTAUnicorn, 100);
    }
  }

  window.addEventListener('DOMContentLoaded', initFinalCTAUnicorn);
  // Also try on astro page load for client-side navigation
  document.addEventListener('astro:page-load', initFinalCTAUnicorn);
</script>