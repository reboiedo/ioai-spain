---
import Button from '@/components/ui/Button.astro';

export interface Props {
  t: {
    finalCTA: {
      title: string;
      ctaButton: string;
    };
  };
}

const { t } = Astro.props;
---

<section class="final-cta" id="final-cta">
  <!-- Unicorn Studio Background -->
  
  <div class="container">
    <h2 class="section-title">{t.finalCTA.title}</h2>
    <div
      class="unicorn-embed unicorn-background"
      data-us-project-src="/finalcta.json"
      data-us-scale="1"
      data-us-dpi="1.5"
    ></div>
    
    <Button
      variant="primary"
      size="large"
      popoverTarget="registration-popover"
      popoverAction="show"
    >
      {t.finalCTA.ctaButton}
    </Button>
  </div>
</section>

<style>
  .final-cta {
    padding-inline: var(--section-inline);
    background: transparent;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    position: relative;
    z-index: 1;
    padding: var(--space-3xl) var(--section-inline);
    border-radius: 24px;
    overflow: hidden;
    
  }

  /* Unicorn Studio Background Styles */
  .unicorn-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    pointer-events: none;
    border-radius: 24px;
  }

  .unicorn-background canvas {
    width: 100% !important;
    height: 100% !important;
    display: block !important;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 2rem;
    color: #fff;
    text-align: center;
    z-index: 2;
  }

  @media (max-width: 768px) {
    .final-cta {
      padding: 3rem 1rem;
    }

    .section-title {
      font-size: 2rem;
    }
  }
</style>

<!-- Unicorn Studio Script (only load if not already loaded) -->
<script is:inline>
  // Check if UnicornStudio is already loaded, if not load it
  if (!window.UnicornStudio) {
    const script = document.createElement('script');
    script.src = 'https://cdn.jsdelivr.net/gh/hiunicornstudio/unicornstudio.js@v1.4.33/dist/unicornStudio.umd.js';
    document.head.appendChild(script);
  }
</script>

<!-- Initialize Unicorn Studio for FinalCTA -->
<script is:inline>
  function initFinalCTAUnicorn() {
    if (window.UnicornStudio) {
      UnicornStudio.init()
        .then((scenes) => {
          console.log('FinalCTA Unicorn Studio initialized successfully:', scenes);
        })
        .catch((err) => {
          console.error('FinalCTA Unicorn Studio initialization error:', err);
        });
    } else {
      // Retry after a short delay if UnicornStudio isn't loaded yet
      setTimeout(initFinalCTAUnicorn, 100);
    }
  }

  window.addEventListener('DOMContentLoaded', initFinalCTAUnicorn);
  // Also try on astro page load for client-side navigation
  document.addEventListener('astro:page-load', initFinalCTAUnicorn);
</script>