---
import Eyebrow from '@/components/Eyebrow.astro';
import Button from '@/components/ui/Button.astro';

export interface Props {
  t: {
    eligibility: {
      eyebrow: string;
      sectionTitle: string;
      intro: string;
      criteria: {
        point1: string;
        point2: string;
        point3: string;
      };
      joinButton: string;
    };
  };
}

const { t } = Astro.props;
---

<section class="eligibility" id="eligibility">
  <div class="container">
    <div class="content-wrapper">
      <Eyebrow text={t.eligibility.eyebrow} />
      
      
      <div class="grid">
          <h2 class="section-title">{t.eligibility.sectionTitle}</h2>
            <p class="section-intro font-14">{t.eligibility.intro}</p>
            <ul class="criteria-list text-base">
              <li>{t.eligibility.criteria.point1}</li>
              <li>{t.eligibility.criteria.point2}</li>
              <li>{t.eligibility.criteria.point3}</li>
            </ul>
            <div class="button-wrapper"><Button popoverTarget="registration-popover"> {t.eligibility.joinButton} </Button></div>
        </div>
        
      <!-- Right side: Image placeholder -->
      <!-- <div class="image-placeholder">
        <div class="placeholder-box">
          <span>Image Placeholder</span>
        </div>
      </div> -->
    </div>
  </div>
</section>

<style>
  .eligibility {
    padding-inline: var(--section-inline);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-xl) var(--section-inline);
    background: var(--background-elevated);
    border-radius: var(--radius-xl)
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: var(--space-m);
  }

  .right {
    display: flex;
    flex-direction: column;
    gap: 24px;
    padding-top: 48px;
  }

  .section-intro {
    max-width: 480px;
    align-self: self-end;
  }



  .criteria-list {
    list-style: none;
    padding: 0;
    order: 4;
  }

  .criteria-list li {
    position: relative;
    margin-bottom: 0.75rem;
    color: #555;
    line-height: 1.6;
    font-size: 1rem;
  }

  .criteria-list li:last-child {
    margin-bottom: 0;
  }

  /* .criteria-list li:before {
    content: "â€¢";
    position: absolute;
    left: -1.5rem;
    color: #0066cc;
    font-weight: bold;
    font-size: 1.2rem;
  } */

  .join-button {
    display: inline-block;
    padding: 0.875rem 2rem;
    background: #374151;
    color: white;
    text-decoration: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 8px;
    transition: background 0.2s, transform 0.1s;
  }


  .image-placeholder {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    min-height: 400px;
  }

  .placeholder-box {
    width: 100%;
    height: 400px;
    background: #f3f4f6;
    border: 2px dashed #d1d5db;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .placeholder-box span {
    color: #9ca3af;
    font-size: 1.25rem;
    font-weight: 500;
  }



  @media (max-width: 809px) { /* mobile only */

    .grid {
      grid-template-columns: 1fr;
    }

    .section-intro {
      font-size: var(--font-size-base);
    }

    .button-wrapper {
      order: 4;
    }

    /* Add blue square bullets on mobile */
    .criteria-list li {
      padding-left: 1.5rem;
    }

    .criteria-list li:before {
      content: "";
      position: absolute;
      left: 0;
      top: 0.5rem;
      width: 8px;
      height: 8px;
      background: #0066cc;
      border-radius: 2px;
    }

  }
</style>