---
import { Image } from 'astro:assets';
import cardFlairSvg from '@/assets/icons/card-flair.svg';
import Eyebrow from '../Eyebrow.astro';

export interface Props {
  position: 'top' | 'bottom';
}

const { position } = Astro.props;
---

<div class={`card-flair card-flair--${position}`}>
  <Image src={cardFlairSvg} alt="" class="flair-image" width={100} height={20} loading="lazy" format="svg" aria-hidden="true" />
</div>

<style>
  .card-flair {
    position: absolute;
    left: 0;
    width: 100%;
    pointer-events: none;
    z-index: -1;
  }

  .card-flair--top {
    top: 0;
    transform: rotate(180deg) translateY(50%);
  }

  .card-flair--bottom {
    bottom: 0;
    transform: translateY(50%);
  }

  .flair-image {
    width: 100%;
    height: auto;
    display: block;
  }
</style>