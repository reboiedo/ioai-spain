---
import { useCampTranslations, type Language } from '@/i18n/camp';
import { tenerifeCampConfig } from '@/data/tenerifeCampConfig';

export interface Props {
  locale?: Language;
}

const { locale } = Astro.props;
const t = useCampTranslations(locale);
---

<section class="pricing-section">
  <div class="pricing-container">
    <h2 class="pricing-heading">
      {t.pricing.heading}
    </h2>

    <div class="pricing-options">
      <div class="pricing-option">
        <div class="pricing-option__divider"></div>
        <h3 class="pricing-option__label" set:html={t.pricing.withoutAccommodation.label.replace('\n', '<br />')}></h3>
        <div class="pricing-option__price">
          <span class="pricing-option__amount">{t.pricing.withoutAccommodation.price}</span>
          <span class="pricing-option__early-bird">{t.pricing.withoutAccommodation.earlyBird}</span>
        </div>
      </div>

      <div class="pricing-option">
        <div class="pricing-option__divider"></div>
        <h3 class="pricing-option__label" set:html={t.pricing.withAccommodation.label.replace('\n', '<br />')}></h3>
        <div class="pricing-option__price">
          <span class="pricing-option__amount">{t.pricing.withAccommodation.price}</span>
          <span class="pricing-option__early-bird">{t.pricing.withAccommodation.earlyBird}</span>
        </div>
      </div>
    </div>

    <a href={tenerifeCampConfig.registrationUrl[locale || 'en']} class="pricing-book-button">{t.pricing.bookButton}</a>

    <p class="pricing-disclaimer">{t.pricing.disclaimer}</p>
  </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Unbounded:wght@700;800&family=Inter+Tight:wght@400&display=swap');

  .pricing-section {
    padding: 120px 0;
    background-color: #EFBD60;
  }

  .pricing-container {
    max-width: 1107px;
    margin: 0 auto;
    padding: 0 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .pricing-heading {
    font-family: 'Unbounded', serif;
    font-size: clamp(36px, 5vw, 57px);
    font-weight: 800;
    line-height: 1.2;
    color: #000000;
    margin: 0 0 40px;
    text-align: center;
  }

  .pricing-book-button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 16px 48px;
    background-color: #EA5938;
    color: #ffffff;
    border: none;
    border-radius: 100px;
    font-family: 'Unbounded', serif;
    font-size: 18px;
    font-weight: 700;
    text-decoration: none;
    transition: all 0.3s ease;
    margin-top: 64px;
  }

  .pricing-book-button:hover {
    background-color: #d64a2e;
    transform: translateY(-2px);
  }

  .pricing-disclaimer {
    font-family: 'Inter Tight', sans-serif;
    font-size: clamp(14px, 1.5vw, 16px);
    font-weight: 700;
    line-height: 1.5;
    color: #000000;
    margin: 24px 0 0;
    text-align: center;
  }

  .pricing-options {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 80px;
    width: 100%;
    max-width: 800px;
  }

  .pricing-option {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 24px;
  }

  .pricing-option__divider {
    width: 60px;
    height: 4px;
    background-color: #000000;
  }

  .pricing-option__label {
    font-family: 'Unbounded', serif;
    font-size: clamp(20px, 3vw, 28px);
    font-weight: 700;
    line-height: 1.3;
    color: #000000;
    margin: 0;
    text-align: center;
  }

  .pricing-option__price {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
  }

  .pricing-option__amount {
    font-family: 'Unbounded', serif;
    font-size: clamp(48px, 6vw, 72px);
    font-weight: 800;
    line-height: 1;
    color: #000000;
  }

  .pricing-option__early-bird {
    font-family: 'Inter Tight', sans-serif;
    font-size: clamp(16px, 2vw, 20px);
    font-weight: 700;
    line-height: 1.3;
    color: #EA5938;
  }

  @media (max-width: 768px) {
    .pricing-section {
      padding: 80px 0;
    }

    .pricing-heading {
      margin-bottom: 32px;
    }

    .pricing-book-button {
      margin-top: 48px;
    }

    .pricing-disclaimer {
      margin-top: 24px;
    }

    .pricing-options {
      grid-template-columns: 1fr;
      gap: 48px;
    }
  }
</style>
