---
import { useCampTranslations, type Language } from '@/i18n/camp';

export interface Props {
  locale?: Language;
}

const { locale } = Astro.props;
const t = useCampTranslations(locale);
---

<section class="schedule-section">
  <div class="schedule-container">
    <h2 class="schedule-heading">{t.schedule.heading}</h2>

    <div class="schedule-grid">
      {t.schedule.items.map((item, index) => (
        <div class="schedule-item">
          <div class="schedule-item__time">{item.time}</div>
          <div class="schedule-item__content">
            <h3 class="schedule-item__title">{item.title}</h3>
            <p class="schedule-item__description">{item.description}</p>
          </div>
          {index < t.schedule.items.length - 1 && <div class="schedule-item__divider" />}
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Unbounded:wght@800&family=Inter+Tight:wght@400&display=swap');

  .schedule-section {
    padding: 120px 0;
    background-color: #1E0FB5;
  }

  .schedule-container {
    max-width: 1107px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .schedule-heading {
    font-family: 'Unbounded', serif;
    font-size: clamp(36px, 5vw, 57px);
    font-weight: 800;
    line-height: 1.2;
    color: #EFBD60;
    margin: 0 0 64px;
    text-align: center;
  }

  .schedule-grid {
    display: flex;
    flex-direction: column;
    gap: 48px;
  }

  .schedule-item {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 60px;
    align-items: start;
    position: relative;
  }

  .schedule-item__time {
    font-family: 'Inter Tight', sans-serif;
    font-size: clamp(16px, 2vw, 18px);
    font-weight: 400;
    line-height: 1.5;
    color: #ffffff;
    margin: 0;
    padding-top: 4px;
  }

  .schedule-item__content {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .schedule-item__title {
    font-family: 'Unbounded', serif;
    font-size: clamp(24px, 3vw, 32px);
    font-weight: 800;
    line-height: 1.2;
    color: #ffffff;
    margin: 0;
  }

  .schedule-item__description {
    font-family: 'Inter Tight', sans-serif;
    font-size: clamp(16px, 2vw, 18px);
    font-weight: 400;
    line-height: 1.6;
    color: #ffffff;
    margin: 0;
  }

  .schedule-item__divider {
    grid-column: 1 / -1;
    width: 100%;
    height: 1px;
    background-color: rgba(255, 255, 255, 0.2);
    margin-top: 32px;
  }

  @media (max-width: 1024px) {
    .schedule-item {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .schedule-item__time {
      padding-top: 0;
    }
  }

  @media (max-width: 768px) {
    .schedule-section {
      padding: 80px 0;
    }

    .schedule-heading {
      margin-bottom: 48px;
    }

    .schedule-grid {
      gap: 40px;
    }

    .schedule-item__divider {
      margin-top: 24px;
    }
  }
</style>
