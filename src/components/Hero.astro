---
import Button from '@/components/ui/Button.astro';

export interface Props {
  t: {
    hero: {
      title: string;
      subtitle: string;
      trainingStarts: string;
      ctaUrl: string;
    };
    ui: {
      common: {
        learnMore: string;
        apply: string;
        joinNow: string;
        getStarted: string;
        register: string;
      };
    };
  };
}

const { t } = Astro.props;
---

<section class="hero">
  <!-- Unicorn Studio Background -->
  <div
    class="unicorn-embed unicorn-background"
    data-us-project-src="/background.json"
    data-us-scale="1"
    data-us-dpi="1.5"
  ></div>

  <div class="container">
    <h1>{t.hero.title}</h1>
    <p class="text-m">{t.hero.subtitle}</p>
    
    <!-- Call-to-action buttons -->
    <div class="button-group">
      <Button variant="primary" href={t.hero.ctaUrl} buttonId="hero">{t.ui.common.joinNow}</Button>
      <p><strong>{t.hero.trainingStarts}</strong></p>
    </div>
  </div>

  
</section>

<style>
  .hero {
    padding: var(--space-3xl-4xl) var(--section-inline);
  }

  .container {
    max-width: 720px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 48px;
  }

  .button-group {
    display: flex;
    background-color: var(--background-elevated);
    gap: 16px;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    padding: 8px 24px 8px 8px;
    border-radius: 16px;
  }

  /* Unicorn Studio Background Styles */
  .hero {
    position: relative;
    overflow: hidden;
  }

  .unicorn-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    pointer-events: none;
  }

  .unicorn-background canvas {
    width: 100% !important;
    height: 100% !important;
    display: block !important;
  }

  .container {
    position: relative;
    z-index: 1;
  }

  @media (max-width: 809px) {
    .button-group {
      background-color: transparent;
    }
  }
</style>

<!-- Unicorn Studio Script -->
<script src="https://cdn.jsdelivr.net/gh/hiunicornstudio/unicornstudio.js@v1.4.33/dist/unicornStudio.umd.js"></script>

<!-- Initialize Unicorn Studio -->
<script is:inline>
  window.addEventListener('DOMContentLoaded', function() {
    if (window.UnicornStudio) {
      UnicornStudio.init()
      .then((scenes) => {
        console.log('Unicorn Studio initialized successfully:', scenes);
      })
      .catch((err) => {
        console.error('Unicorn Studio initialization error:', err);
      });
    } else {
      console.error('UnicornStudio not found. Check if the script loaded correctly.');
    }
  });
</script>