    color: #1e3a8a;
    font-size: 0.9rem;
    line-height: 1.5;
    margin: 0;
  }

  .confirmation-message {
    color: var(--text-secondary);
    font-size: 0.9rem;
    line-height: 1.5;
    padding: 1rem;
    background: #f3f4f6;
    border-radius: 6px;
    border: 1px solid #e5e7eb;
