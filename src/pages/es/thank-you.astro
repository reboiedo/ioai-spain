---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ThankYouPageLayout from '../../layouts/ThankYouPageLayout.astro';
import { useTranslations } from '../../i18n';

// Spanish locale
const locale = Astro.currentLocale || 'es';
const t = useTranslations(locale as 'en' | 'es');
---

<BaseLayout title={t.thankYou.meta.title} description={t.thankYou.meta.description} showNavigation={false}>
  <ThankYouPageLayout t={t} />
</BaseLayout>