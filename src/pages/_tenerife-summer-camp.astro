---
import TenerifeCampLayout from '@/layouts/TenerifeCampLayout.astro';
import CampOverview from '@/components/tenerife-camp/CampOverview.astro';
---

<TenerifeCampLayout
  title="Tenerife Camp Test Page"
  description="Testing Tenerife camp styles"
>
  <!-- Camp Overview Section (Recreated from target page) -->
  <CampOverview
    mainTitle="Tenerife Summer Camp"
    dateSubtitle="July 1st — 15th, Day Camp"
    tagline="2-Weeks program of digital wizardry for the young apprentices"
    description="A path to computer tech success for your child with an island-coding adventure at our summer camp"
    paragraph="We're excited to offer an immersive and fun-filled coding experience for children aged 10 to 18 on the beautiful island of Tenerife. Our camp is designed to inspire and empower the next generation of tech leaders, and we can't wait to share our passion for coding with your child."
  />

  <!-- Test Secondary Section -->
  <section class="camp-section camp-section--secondary">
    <div class="camp-container">
      <h2 class="camp-heading camp-heading--section">Learn From the Best</h2>
      <p class="camp-text">Testing the secondary color section (Deep Blue).</p>
      <button class="camp-button camp-button--primary">Learn More</button>
    </div>
  </section>

  <!-- Test Tertiary Section (Yellow) -->
  <section class="camp-section camp-section--tertiary">
    <div class="camp-container">
      <h2 class="camp-heading camp-heading--section">Why Join Our Camp?</h2>
      <p class="camp-text">Testing the tertiary color section (Bright Yellow).</p>
      <button class="camp-button camp-button--secondary">Discover More</button>
    </div>
  </section>

  <!-- Test Light Section -->
  <section class="camp-section camp-section--light">
    <div class="camp-container">
      <h2 class="camp-heading camp-heading--section">Course Offerings</h2>
      <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 2rem; margin-top: 2rem;">
        <div class="camp-card">
          <h3 class="camp-heading camp-heading--subsection">AI Fundamentals</h3>
          <p class="camp-text">Learn the basics of artificial intelligence and machine learning.</p>
          <a href="#" class="camp-link">View Details →</a>
        </div>
        <div class="camp-card camp-card--bordered">
          <h3 class="camp-heading camp-heading--subsection">Neural Networks</h3>
          <p class="camp-text">Dive deep into neural network architectures and training.</p>
          <a href="#" class="camp-link">View Details →</a>
        </div>
        <div class="camp-card camp-card--primary">
          <h3 class="camp-heading camp-heading--subsection">Computer Vision</h3>
          <p class="camp-text">Explore image processing and computer vision applications.</p>
        </div>
        <div class="camp-card camp-card--tertiary">
          <h3 class="camp-heading camp-heading--subsection">Natural Language</h3>
          <p class="camp-text">Master text processing and language understanding with AI.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Test White Section with Buttons -->
  <section class="camp-section camp-section--white">
    <div class="camp-container camp-container--narrow">
      <h2 class="camp-heading camp-heading--section">Ready to Join?</h2>
      <p class="camp-text">Limited spots available. Applications are reviewed on a rolling basis.</p>
      <div style="display: flex; gap: 1rem; margin-top: 2rem; flex-wrap: wrap;">
        <button class="camp-button camp-button--primary">Apply Now (Red)</button>
        <button class="camp-button camp-button--secondary">Learn More (Blue)</button>
        <button class="camp-button camp-button--tertiary">Get Info (Yellow)</button>
        <button class="camp-button camp-button--outline">Download Brochure</button>
      </div>
    </div>
  </section>
</TenerifeCampLayout>
